<% include ./partials/header %>
<div class="ui main text container">
	<h1 class="ui header">All Blogs</h1>
	<% blogs.forEach(function(blog){ %> 
	<div class="ui items">
		<div class="item">
			<div class="image">
				<img src="<%=blog.image%>">
			</div>
			<div class="content">
				<a class="header" href="/blogs/<%=blog._id%>"><%= blog.title %></a>
				<div class="meta">
					<span><%= blog.body.created%></span>
					<p><%- blog.body.substring(0, 100) %>...</p>
				</div>
				<div class="extra">
					<a href="/blogs/<%=blog._id%>">Read More <i class="chevron right icon"></i></a>
				</div>
			</div>

		</div>
	</div>
	
	
	
	
	
	<% }); %>
</div>
<% include ./partials/footer %>